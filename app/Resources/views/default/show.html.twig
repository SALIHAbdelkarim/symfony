{% extends 'base.html.twig' %}

{% block body %}

<section class="hero is-primary is-bold">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        {{ post.title }}
      </h1>
      <h2 class="subtitle">
        {{ post.description }}
      </h2>
    </div>
  </div>
</section>
<br>
<div class="container">


	<div class="columns">
		 <div class="column">
          <div class="card">
            <div class="card-image">
              <figure class="image is-4by3">
                <img src="{{ asset('uploads/posts/'~ post.image) }}" alt="{{ post.title }}">
              </figure>
            </div>
            <div class="card-content">
             
              <h5 class="title">{{ post.title }}</h5>
              <div class="content">
                categorie:
                {% for cat in post.categories %}
                     {{ cat.libelle }},
                {% endfor %}
                <br>
               <p>{{ post.body}}</p>
                <br>
                <time>{{ post.datepublication |date('Y-m-d') }}</time>
              </div>
            </div>
          </div>
        </div>
	</div>

	
</div>
    
{% endblock %}