<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link rel="stylesheet" type="text/css" href="{{ asset('css/bulma.min.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('css/font-awesome.min.css') }}">
    </head>
    <body>
<nav class="navbar is-transparent">
  <div class="navbar-brand">
    <a class="navbar-item" href="https://bulma.io">
      <img src="https://bulma.io/images/bulma-logo.png" alt="Bulma: a modern CSS framework based on Flexbox" width="112" height="28">
    </a>
    <div class="navbar-burger burger" data-target="navbarExampleTransparentExample">
      <span></span>
      <span></span>
      <span></span>
    </div>
  </div>

  <div id="navbarExampleTransparentExample" class="navbar-menu">
    <div class="navbar-start">
      <a class="navbar-item" href="{{ path('homepage') }}">
        Acceuil
      </a>
      <a class="navbar-item" href="{{ path('blog_index') }}">
        Blog
      </a>
      <a class="navbar-item" href="{{ path('contact_form') }}">
        Contactez Nous
      </a>
    </div>
  {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
    <div class="navbar-end">
      <a class="navbar-item" href="#">
        <i class="fa fa-cog"></i> Connect√© tant que : {{ app.user.username }}</a>
      </a>
      <a class="navbar-item" href="{{ path("fos_user_security_logout") }}"> <i class="fa fa-sign-out"></i> {{ 'layout.logout' | trans({},'FOSUserBundle') }}</a>
    </div>
    {% else %}
    <div class="navbar-end">
      <a class="navbar-item" href="{{path('fos_user_security_login')}}">
        login
      </a>
      <a class="navbar-item" href="{{path('fos_user_registration_register')}}">
        register
      </a>
    </div>
    {% endif %}
  </div>
</nav>
</nav>

