{% extends 'back.html.twig' %}

{% block body %}
<div class="col-md-6 m-auto">
    <h3 align="center">Nouvelle Categorie</h3>

    {{ form_start(form) }}
        <div class="form-group">
            {{ form_row(form.libelle,{'attr':{'class':'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.description,{'attr':{'class':'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.slug,{'attr':{'class':'form-control'}}) }}
        </div>
        <input type="submit" value="Enregistrer" class="btn btn-primary" />
        <a class="btn btn-default" href="{{ path('category_index') }}">Retour</a>

    {{ form_end(form) }}

</div>
  
 
{% endblock %}
{% block breadcrumb %}
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="#">Tableau de bord</a></li>
      <li class="breadcrumb-item"> <a href="{{ path('category_index') }}">List des categories</a> </li>
      <li class="breadcrumb-item active">Nouvelle Categorie</li>
    </ol>
{% endblock %}
