{% extends 'back.html.twig' %}

{% block body %}
<div class="col-md-6 m-auto">
    <h3 align="center">Nouvelle Categorie</h3>

    {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.libelle) }}
            {% if form.libelle.vars.errors | length > 0 %}
            {{ form_widget(form.libelle,{'required':false,'attr':{'class':'form-control is-invalid'}}) }}
            {% else %}
             {{ form_widget(form.libelle,{'required':false,'attr':{'class':'form-control'}}) }}
            {% endif %}
            <span class="text-danger">{{ form_errors(form.libelle) }}</span> 
        </div>
        <div class="form-group">
            {{ form_label(form.description) }}
            {% if form.description.vars.errors | length > 0 %}
            {{ form_widget(form.description,{'required':false,'attr':{'class':'form-control is-invalid'}}) }}
            {% else %}
             {{ form_widget(form.description,{'required':false,'attr':{'class':'form-control'}}) }}
            {% endif %}            
            <span class="text-danger">{{ form_errors(form.description) }}</span> 
        </div>
        <div class="form-group">
            {{ form_label(form.slug) }}
            {% if form.slug.vars.errors | length > 0 %}
            {{ form_widget(form.slug,{'required':false,'attr':{'class':'form-control is-invalid'}}) }}
            {% else %}
             {{ form_widget(form.slug,{'required':false,'attr':{'class':'form-control'}}) }}
            {% endif %}              
            <span class="text-danger">{{ form_errors(form.slug) }}</span>
        </div>
        <input type="submit" value="Enregistrer" class="btn btn-primary" />
        <a class="btn btn-default" href="{{ path('category_index') }}">Retour</a>

    {{ form_end(form) }}

</div>
  
 
{% endblock %}
{% block breadcrumb %}
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="#">Tableau de bord</a></li>
      <li class="breadcrumb-item"> <a href="{{ path('category_index') }}">List des categories</a> </li>
      <li class="breadcrumb-item active">Nouvelle Categorie</li>
    </ol>
{% endblock %}
