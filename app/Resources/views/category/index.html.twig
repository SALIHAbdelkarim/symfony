{% extends 'back.html.twig' %}

{% block body %}

    <h3>Liste des Cat√©gories</h3>
    <div class="pull-right">
       <a href="{{ path('category_new') }}" class="btn btn-success"> <i class="fa fa-plus"></i> Nouvelle categorie</a>
    </div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>Slug</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td><a href="{{ path('category_show', { 'id': category.id }) }}">{{ category.id }}</a></td>
                <td nowrap="nowrap">{{ category.libelle }}</td>
                <td nowrap="nowrap">{{ category.slug }}</td>
                <td>{{ category.description| slice(0,80) }}...</td>
                <td>
                    <div class="btn-group">
                        <a class="btn btn-primary" href="{{ path('category_show', { 'id': category.id }) }}"><i class="fa fa-search"></i></a>
                        
                        <a class="btn btn-warning" href="{{ path('category_edit', { 'id': category.id }) }}"><i class="fa fa-edit"></i></a>
                    </div>
                    
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="navigation">
        {{ knp_pagination_render(categories) }}
    </div>

{% endblock %}
{% block breadcrumb %}
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="#">Tableau de bord</a></li>
      <li class="breadcrumb-item active">List des categories</li>
    </ol>
{% endblock %}
